<UserControl x:Class="RecipeBookVisual.ViewsRecipes.CombinationWarning"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeBookVisual.ViewsRecipes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid Background="LightSlateGray">

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        
        <HeaderedContentControl Grid.Row="0" VerticalAlignment="Bottom" Foreground="WhiteSmoke" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center">Fel: Något Av Nedanstående</HeaderedContentControl>
        <HeaderedContentControl Grid.Row="1" VerticalAlignment="Center" Foreground="WhiteSmoke" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center">*Receptet Saknar Titel*</HeaderedContentControl>
        <HeaderedContentControl Grid.Row="2" Foreground="WhiteSmoke" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center">*Receptet Finns Redan*</HeaderedContentControl>

    </Grid>
</UserControl>
